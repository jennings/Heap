@model Heap.Web.ViewModels.Shared.EditorTemplates.SymptomSelectorViewModel
<div class="symptomeditor">
    <ul>
        @{ bool oddRow = true; }
        @if (Model.SelectedSymptoms != null)
        {
            foreach (var selectedSymptom in Model.SelectedSymptoms)
            {
            <li class="@(oddRow ? "odd" : "even")">
                @selectedSymptom.Question.Description
                @Html.DropDownList(
                    "Question" + selectedSymptom.Question.Id,
                    new SelectList(selectedSymptom.Question.Symptoms, "Id", "Name", selectedSymptom),
                    "",
                    null)
            </li>
                oddRow = !oddRow;
            }
        }
        @if (Model.SuggestedQuestions != null)
        {
            foreach (var question in Model.SuggestedQuestions)
            {
            <li class="@(oddRow ? "odd" : "even")">
                @question.Description
                @Html.DropDownList(
                    "Question" + question.Id,
                    new SelectList(question.Symptoms, "Id", "Name", ""),
                    "",
                    null)
            </li>
                oddRow = !oddRow;
            }
        }
    </ul>
</div>
