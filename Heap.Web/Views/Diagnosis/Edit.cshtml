@model Heap.Web.ViewModels.Diagnosis.EditDiagnosisViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script>
    $(function () {
        $('input[type="submit"]').button();
    });
</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Diagnosis</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Query)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Query)
            @Html.ValidationMessageFor(model => model.Query)
        </div>
        @{
    var symptomModel = new Heap.Web.ViewModels.Shared.EditorTemplates.SymptomSelectorViewModel
    {
        SelectedSymptoms = Model.SelectedSymptoms,
        SuggestedQuestions = Model.SuggestedQuestions
    };
        }
        <div class="editor-label">
            Symptoms
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => symptomModel)
        </div>
        <p>
            <input type="submit" value="Edit" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
